{
	"name": "app",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "dotenv-flow vite preview",
		"test": "NODE_ENV=test npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"db:setup": "./scripts/db_setup.sh",
		"db:seed": "vite-node scripts/seed.ts",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "./scripts/db_setup.sh gauntlet_test && NODE_ENV=test playwright test",
		"test:unit": "NODE_ENV=test ./scripts/db_setup.sh gauntlet_test && NODE_ENV=test vitest --run"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/bcrypt": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.4",
		"@types/pg": "^8.10.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"dotenv-flow": "^4.0.0",
		"dotenv-flow-cli": "^1.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"react": "^18.2.0",
		"svelte": "^4.0.5",
		"svelte-bootstrap-icons": "^3.1.0",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-node": "^0.34.6",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"esbuild": "^0.19.4",
		"jsonwebtoken": "^9.0.2",
		"monaco-editor": "^0.44.0",
		"pg": "^8.11.3",
		"playwright": "^1.39.0",
		"sass": "^1.69.4",
		"tailwindcss": "^3.3.3",
		"zod": "^3.22.4"
	}
}
